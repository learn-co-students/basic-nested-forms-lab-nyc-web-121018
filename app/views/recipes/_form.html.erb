<%= form_for @recipe do |f| %>
  Title: <%= f.text_field :title %>

<%= f.fields)for :ingredients do |i| %>
<%= i.label :name %>
<%= i.text_field :name %>

<%= i.label :quantity %>
<%= i.text_field :quantity %>

<%= i.label :ingredient_type %>
<%= i.text_field :ingredient_type %>

<% end %>

<%= f.submit %>
<% end %>
